    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
         HeartRates frequencia = new HeartRates ();
        
         // componentCount não pega valor 
        frequencia.setNome(jTextField1.getText());
        frequencia.setSobrenome(jTextField2.getText());
        frequencia.setData((Integer) jSpinner1.getValue());
        frequencia.setMes((Integer)jSpinner2.getValue());
        frequencia.setAno((Integer)jSpinner3.getValue());
        frequencia.getIdade();
       
         
        JOptionPane.showMessageDialog(rootPane, "Nome: " + frequencia.getNome() + "\nSobrenome: " + frequencia.getSobrenome() + 
                "\nData de nascimento: " + frequencia.getData() + "/" + frequencia.getMes() + "/" + frequencia.getAno() + 
                "\nIdade: " + frequencia.getIdade() +  "\nFrequência Cardíaca: " + frequencia.getFreqCard());
        
        
    }                                        

    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        if(JOptionPane.showConfirmDialog(null, "Quer ir embora mesmo?", "Sair?",JOptionPane.YES_NO_OPTION)==0)
        System.exit(0);

    }                                        

