    private void jButton4ActionPerformed(java.awt.event.ActionEvent evt) {                                         
       
        Empregado e1 = new Empregado();
        e1.setPrimeiroNome(jTextField1.getText());
        e1.setSobrenome(jTextField2.getText());
        e1.setSalarioMensal(Double.parseDouble(jTextField3.getText()));
        e1.infoEmpregado();
        
        Empregado e2 = new Empregado();
        e2.setPrimeiroNome(jTextField4.getText());
        e2.setSobrenome(jTextField5.getText());
        e2.setSalarioMensal(Double.parseDouble(jTextField6.getText()));
        e2.infoEmpregado();

    }                                        

    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        
        Empregado e1 = new Empregado();
        e1.setSalarioMensal(Double.parseDouble(jTextField3.getText()));
        
        JOptionPane.showMessageDialog(null, "Salário anual: R$" + e1.getSalarioAnual());
        
        

    }                                        

    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
            Empregado e1 = new Empregado();
            e1.setSalarioMensal(Double.parseDouble(jTextField3.getText()));
            e1.aplicarAumentoSalario(10);
            
            JOptionPane.showMessageDialog(null, "Salário anual com aumento: R$ %.2f" + e1.getSalarioAnual());

            
    }                                        

    private void jButton3ActionPerformed(java.awt.event.ActionEvent evt) {                                         
          if(JOptionPane.showConfirmDialog(rootPane, "Deseja sair?", "Sair", JOptionPane.YES_NO_OPTION)==0){
            System.exit(0);
        }     }                                        

