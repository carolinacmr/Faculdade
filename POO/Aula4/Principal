    private void jButton7ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        Empregado e2 = new Empregado();
            e2.setSalarioMensal(Double.parseDouble(jTextField6.getText()));
            e2.aplicarAumentoSalario(10);
            
            JOptionPane.showMessageDialog(null, "Salário anual do empregado 2 com aumento: R$" + e2.getSalarioAnual());
    }                                        

    private void jButton6ActionPerformed(java.awt.event.ActionEvent evt) {                                         
