    private void jButton3ActionPerformed(java.awt.event.ActionEvent evt) {                                         
    
        if(JOptionPane.showConfirmDialog(rootPane, "Deseja sair?", "Sair", JOptionPane.YES_NO_OPTION)==0){
            System.exit(0);
        }
        
    }                                        

    private void corActionPerformed(java.awt.event.ActionEvent evt) {                                    
       if(cor.getText().length()>0){
        Bike b1 = new Bike(cor.getText(), marca.getText(), modelo.getText(), Integer.parseInt(ano.getText()));
        b1.setCor(cor.getText());
        
        JOptionPane.showMessageDialog(null, "Cor atual: " +b1.getCor());
      } else {
          JOptionPane.showMessageDialog(null, "Campo cor não pode ser vazio!");
      }
    }                                   

    private void modeloActionPerformed(java.awt.event.ActionEvent evt) {                                       
        // TODO add your handling code here:
    }                                      

    private void jMenu1ActionPerformed(java.awt.event.ActionEvent evt) {                                       
        Bike b1 = new Bike(cor.getText(), marca.getText(), modelo.getText(), Integer.parseInt(ano.getText()));
        b1.setCor(cor.getText());
        
        JOptionPane.showMessageDialog(null, "Cor atual: " +b1.getCor());
        
        Bike b2 = new Bike(cor.getText(), marca.getText(), modelo.getText(), Integer.parseInt(ano.getText()));
        b1.setCor(cor.getText());
        
        JOptionPane.showMessageDialog(null, "Nova cor: " +b2.getCor());
        
        cor.setText(" ");
        
    }                                      

    private void sairMenuActionPerformed(java.awt.event.ActionEvent evt) {                                         
if(JOptionPane.showConfirmDialog(rootPane, "Deseja sair?", "Sair", JOptionPane.YES_NO_OPTION)==0){
            System.exit(0);
        }        
    }                                        

    private void anoAtualActionPerformed(java.awt.event.ActionEvent evt) {                                         
       if(ano.getText().length()>0){
           Bike b1 = new Bike(cor.getText(), marca.getText(), modelo.getText(), Integer.parseInt(ano.getText()));
       JOptionPane.showMessageDialog(null, "Ano atual: " +b1.getAno());
       
      }else {
           JOptionPane.showMessageDialog(null, "Campo ano não pode ser vazio!");
       }
       
       
    }                                        

