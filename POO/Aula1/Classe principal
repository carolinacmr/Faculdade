        // TODO add your handling code here:
    }                                     

    private void tAnoActionPerformed(java.awt.event.ActionEvent evt) {                                     
      if(ano.getText().length()>0){
          if(Integer.parseInt(ano.getText())<0){
              JOptionPane.showMessageDialog(null, "O ano não pode ser negativo!");
          } else {
        JOptionPane.showMessageDialog(null, "Ano: " + ano.getText());
          }
    } else {
          JOptionPane.showMessageDialog(null, "Campo ano não pode estar vazio!");
      }


    }                                    

    private void jButton4ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        if(modelo.getText().length()>0){
          
        JOptionPane.showMessageDialog(null, "Modelo: " + modelo.getText());
          
    } else {
          JOptionPane.showMessageDialog(null, "Campo modelo não pode estar vazio!");
      }

    }                                        

    private void corAtualActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        if(cor.getText().length()>0){
            Bike b1 = new Bike(cor.getText(), marca.getText(), modelo.getText(), Integer.parseInt(ano.getText()));
            b1.setCor(cor.getText());

            JOptionPane.showMessageDialog(null, "Cor atual: " +b1.getCor());
        } else {
            JOptionPane.showMessageDialog(null, "Campo cor não pode ser vazio!");
        }
    }                                        

    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        Bike b1 = new Bike(cor.getText(), marca.getText(), modelo.getText(), Integer.parseInt(ano.getText()));
        b1.setCor(cor.getText());

        JOptionPane.showMessageDialog(null, "Nova cor: " +b1.getCor());

        cor.setText(" ");
    }                                        

    private void jButton5ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        Bike b1 = new Bike(cor.getText(), marca.getText(), modelo.getText(), Integer.parseInt(ano.getText()));
        b1.setModelo(modelo.getText());

        JOptionPane.showMessageDialog(null, "Novo modelo: " +b1.getModelo());

    }                                        

    private void jButton7ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        Bike b1 = new Bike(cor.getText(), marca.getText(), modelo.getText(), Integer.parseInt(ano.getText()));
        b1.setAno(Integer.parseInt(ano.getText()));

        JOptionPane.showMessageDialog(null, "Novo ano: " +b1.getAno());

    }                                        

    private void infoBikeActionPerformed(java.awt.event.ActionEvent evt) {                                         
        //if para testar condições para ano
        if(ano.getText().length()>0 && cor.getText().length()>0
           && marca.getText().length()>0 && modelo.getText().length()>0){
            if(Integer.parseInt(ano.getText())<0){
                JOptionPane.showMessageDialog(null, "Ano não pode ser negativo!");
            }else {
                Bike b1 = new Bike(cor.getText(), marca.getText(), modelo.getText(), Integer.parseInt(ano.getText()));
                b1.statusBike();
            }
      } else {
          JOptionPane.showMessageDialog(null, "Nenhum campo pode ser vazio!");
      }
        

        
    }                                        

    private void anoMenuActionPerformed(java.awt.event.ActionEvent evt) {                                        
         if(ano.getText().length()>0){
           Bike b1 = new Bike(cor.getText(), marca.getText(), modelo.getText(), Integer.parseInt(ano.getText()));
       JOptionPane.showMessageDialog(null, "Ano atual: " +b1.getAno());
       
      }else {
           JOptionPane.showMessageDialog(null, "Campo ano não pode ser vazio!");
       }
    }                                       

    private void sairMenuMouseClicked(java.awt.event.MouseEvent evt) {                                      
        // TODO add your handling code here:
        if(JOptionPane.showConfirmDialog(rootPane, "Deseja sair?", "Sair", JOptionPane.YES_NO_OPTION)==0){
            System.exit(0);
        }
    }                                     

