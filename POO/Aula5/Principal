    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        Datas d1 = new Datas();
        d1.setDia(Integer.parseInt(jTextField1.getText()));
        d1.setMes(Integer.parseInt(jTextField2.getText()));
        d1.setAno(Integer.parseInt(jTextField3.getText()));
        
        d1.displayDate();
    }                                        

