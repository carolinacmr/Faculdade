    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
 if(JOptionPane.showConfirmDialog(rootPane, "Quer ir embora mesmo?", "Sair?",JOptionPane.YES_NO_OPTION)==0)
        System.exit(0);
        // TODO add your handling code here:
    }                                        

    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
       Invoice i1 = new Invoice (" ", " ", 0, 0);
       
       i1.setNumero(jTextField1.getText());
       i1.setDescricao(jTextField2.getText());
       i1.setQuantidadeComprada(Integer.parseInt(jTextField3.getText()));
       i1.setPrecoItem(Double.parseDouble(jTextField4.getText()));
       i1.getInvoiceAmount();

       JOptionPane.showMessageDialog(rootPane, "Código: " + i1.getNumero()
                + "\nDescrição: " + i1.getDescricao()
                + "\nQuantidade: " + i1.getQuantidadeComprada()
                + "\nPreço: " + i1.getPrecoItem() + "\nFatura: " + i1.getInvoiceAmount());
       
    }                                        

